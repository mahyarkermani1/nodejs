<%- include('header', {title: "Create Post"}) %>

<div class="container mt-5">
    <h2>Create a New Post</h2>
    <form class="mt-3" method="POST" action="/create_post" enctype="multipart/form-data">
        <input type="hidden" name="id_post" value="<%= (typeof id !== 'undefined' && id) ? id : '' %>">
        <div class="form-group">
            <label for="post_cover">Upload Your Post Cover</label>
            <input type="file" class="form-control" id="post_cover" name="post_cover" accept="image/jpg, image/jpeg, image/png" required>
        </div>
        <div class="form-group">
            <label for="title">Post Title</label>
            <input type="text" class="form-control" id="title" name="title" 
            value="<%= (typeof title !== 'undefined' && title) ? title : '' %>" required>
        </div>
        <div class="form-group">
            <label for="content">Post Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" 
            required><%= (typeof content !== 'undefined' && content) ? content : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish Post</button>
        <button type="reset" class="btn btn-secondary">Clear</button>
        <a href="/profiles" class="btn btn-info">Back to Menu</a>
    </form>
    
</div>

<%- include('footer') %>
