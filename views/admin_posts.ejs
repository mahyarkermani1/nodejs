<%- include("header_admin", { title: "Profile" }) %>

<div class="mt-3">
    <% if (typeof posts !== "undefined" && posts.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date of Publish</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach(post => { %>
                    <tr>
                        <td><%= post.id_post %></td>
                        <td><%= post.createdAt %></td>
                        <td><%= post.title %></td>
                        <td>
                            <a href="/create_post?operation=edit&id_post=<%= post.id_post %>&id_user=<%= post.id_user %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/create_post?operation=delete&id_post=<%= post.id_post %>&id_user=<%= post.id_user %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date of Publish</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                <tr>
                    <td><h4>No Post Found.</h4></td>
                </tr>
            </tbody>
        </table>
    <% } %>
    

</div>