<%- include("header_admin", { title: "Profile" }) %>

<div class="mt-3">
    <% if (typeof users !== "undefined" && users.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date of Create</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.createdAt %></td>
                        <td><%= user.first_name + " " + user.last_name %></td>
                        <td>
                            <a href="/admin/users/?operation=edit&id=<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/admin/users/?operation=delete&id=<%= user.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date of Create</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                <tr>
                    <td><h4>No User Found.</h4></td>
                </tr>
            </tbody>
        </table>
    <% } %>
    

</div>